							</svg>
					
					include includes/header-personal.pug		
					
					.payment
						.payment__title Оплата 
							span заказа
						.payment__goods
							.payment__goods-header
								.payment__goods-title._big Товары
								.payment__goods-title Кол-во (шт.)
								.payment__goods-title Цена (руб.)
							.payment__goods-list
								.payment__goods-row
									.payment__goods-name DOUBLE EAGLE AWK45
									.payment__goods-quantity 1
									.payment__goods-price 15 500 750
								.payment__goods-row
									.payment__goods-name Мишень Стандарт оранжевая
									.payment__goods-quantity 10
									.payment__goods-price 1 000

						.payment__total
							.payment__total-title К оплате: 
							.payment__total-cost
								span 95 000
								| &nbsp;Р

						.payment__delivery
							.payment__delivery-title Доставка:
							.payment__delivery-info
								.payment__delivery-cost ~
									span 4 500
									| &nbsp;Р
								.payment__delivery-pict
									img(src="./assets/images/img/delivery_business-line.svg", alt="")/
